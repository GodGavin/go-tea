{% package views %}

{% import "github.com/jpincas/go-tea/examples/memorygame/types" %} 

{% func RenderCard(card types.Card) %}

<div class="card 
        {% if card.Flipped %} faceup {% else %} facedown {% endif %}
        {% if card.Matched %} matched {% else %} unmatched {% endif %}">
    <span class="value">
        {% if card.Flipped %} {%d card.Value %} {% endif %}
    </span>
</div>


{% endfunc %}